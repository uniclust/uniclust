#! /bin/sh


### BEGIN INIT INFO
# Provides:       uniclust
# Required-Start: $network $local_fs $remote_fs
# Required-Stop:  $remote_fs
# Default-Start:  2 3 4 5
# Default-Stop:   0 1 6
# Short-Description: Uniclust running script
### END INIT INFO

. /lib/lsb/init-functions

RUN_USER_NAME=uniclust
PATH_TO_SERVER=/archive/uniclust/ssh_run/server.py

start()
{
	log_begin_msg "Starting Uniclust"
	su $RUN_USER_NAME -c "$PATH_TO_SERVER"
	log_end_msg 0
}

stop()
{
	log_begin_msg "Stopping Uniclust"
	echo ""
	killall server.py
	log_end_msg 0
}


case "$1" in
start)
	start
	;;
stop)
	stop
	;;
restart|force-reload)
	stop && start
	;;
*)
	echo "Usage: $0 {start|stop|restart|force-reload}"
	exit 1
esac
